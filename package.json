{
  "name": "fan",
  "private": true,
  "version": "1.0.0",
  "description": "跨平台软件前端反编译提取工具",
  "author": {
    "name": "Fan Team",
    "email": "fan-team@example.com"
  },
  "homepage": "https://github.com/fan-team/fan",
  "main": "main.js",
  "scripts": {
    "dev": "electron .",
    "build": "electron-builder",
    "package": "electron-builder",
    "package:win": "electron-builder --win",
    "package:mac": "electron-builder --mac",
    "package:linux": "electron-builder --linux",
    "test": "NODE_OPTIONS=--max-old-space-size=4096 jest",
    "test:coverage": "NODE_OPTIONS=--max-old-space-size=4096 jest --coverage",
    "coverage:check": "node scripts/coverage-monitor.js"
  },
  "devDependencies": {
    "electron": "^30.0.0",
    "electron-builder": "^24.0.0",
    "electron-vite": "^2.0.0",
    "eslint": "^10.0.0",
    "globals": "^17.3.0",
    "jest": "^30.2.0",
    "vite": "^5.0.0"
  },
  "dependencies": {
    "adm-zip": "^0.5.0",
    "extract-zip": "^2.0.1",
    "fs-extra": "^11.0.0",
    "js-beautify": "^1.14.0",
    "uglify-js": "^3.17.0"
  },
  "build": {
    "appId": "com.fan.app",
    "productName": "Fan",
    "copyright": "Copyright © 2026 Fan Team",
    "directories": {
      "output": "dist"
    },
    "mac": {
      "category": "public.app-category.utilities",
      "target": [
        "dmg",
        "zip"
      ]
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ]
    },
    "linux": {
      "target": [
        "deb",
        "rpm",
        "AppImage"
      ],
      "category": "Utility",
      "maintainer": "Fan Team <fan-team@example.com>"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Fan"
    }
  }
}
